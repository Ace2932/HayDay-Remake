function gameStateChanger(){
  if (keyWentDown("i") && gameState != "win"){
    gameState = "instructionScreen";
  }
  if(keyWentDown("space") && gameState != "win"){
      gameState = "farm";
      titleScreen.visible = 0;
      winScreen.visible = 0;
      medal.visible = 0;
        
      
      
    }
  
  if(gameState == "instructionScreen"){
    instructionScreenBacking.visible = 1;
    
  } else {
    instructionScreenBacking.visible = 0;
  }
  
  
  
  if (gameState == "farm"){
   
    if(mousePressedOver(silo)){
      gameState = "inventory";
    }
    if(mousePressedOver(barn)){
      gameState = "recipeBook";
    }
  }
  
  if (gameState == "inventory"){
    inventory.visible = 1;
    xButton.visible = 1;
    iWheat.visible = 1;
    iCorn.visible = 1;
    iEgg.visible = 1;
    iCF.visible = 1;
    iCB.visible = 1;
    iBread.visible = 1;
    
  
  }
  
  if (gameState == "recipeBook"){
    xButton.visible = 1;
    recipeBook.visible = 1;
    
    
    //checks if on last two pages
    if (!page1){
    leftArrow.visible = 1;
    rB.visible = 1;
    } else {
      leftArrow.visible = 0;
      rB.visible = 0;
      
    }
    //checks if on first two pages
    if (!page4){
    rightArrow.visible = 1;
    rCF.visible = 1;
    rCB.visible = 1;
    } else {
      rightArrow.visible = 0;
      rCF.visible = 0;
      rCB.visible = 0;
    }
    //shifts pages
    if(mousePressedOver(leftArrow)){
        page1 = true;
        page2 = true;
        page3 = false;
        page4 = false;
      }
    if (mousePressedOver(rightArrow)){
        page3 = true;
        page4 = true;
        page1 = false;
        page2 = false;
      }
    
  }
  if (mousePressedOver(xButton) && xButton.visible == 1){
      gameState = "farm";
      inventory.visible = 0;
      xButton.visible = 0;
      inventory.visible = 0;
      xButton.visible = 0;
      iWheat.visible = 0;
      iCorn.visible = 0;
      iEgg.visible = 0;
      iCF.visible = 0;
      iCB.visible = 0;
      iBread.visible = 0;
      //recipe book sprites
      recipeBook.visible = 0;
      leftArrow.visible = 0;
      rightArrow.visible =0;
      rCF.visible = 0;
      rCB.visible = 0;
      rB.visible = 0;
      
      
    }
  
  if (gameState == "win"){
    winScreen.visible = 1;
    medal.visible = 1;
    carePackage.visible = 1;
    if(keyWentDown("r")){
      playOn = true;
      winScreen.visible = 0;
      medal.visible = 0;
      carePackage.visible = 0;
      gameState = "farm";
      
    }
  }
  
}

function farmPlotInteraction(){
  if (mousePressedOver(landPlot1) ||  mousePressedOver(landPlot2)  || mousePressedOver(landPlot3)
  || mousePressedOver(landPlot4) ||  mousePressedOver(landPlot5)  || mousePressedOver(landPlot6)){
    plantMenu.visible = 1;
    cornSprite.visible = 1;
    wheatSprite.visible = 1;
    scytheSprite.visible = 1;
    // plantMenu.x = landPlot1.x - 20;
    // plantMenu.y = landPlot1.y - 20;
    
  } else if (mousePressedOver(cornSprite) && cornSprite.visible == 1){
        cornMouse = true;
          
    }else if (mousePressedOver(scytheSprite) && scytheSprite.visible == 1){
      scytheMouse = true; 
    }else if(mousePressedOver(wheatSprite) && wheatSprite.visible == 1){
      wheatMouse = true;
      
    } else if(mousePressedOver(grass)){ //hide plant menu
    plantMenu.visible = 0;
    cornSprite.visible = 0;
    wheatSprite.visible = 0;
    scytheSprite.visible = 0;
  }
}

function checkEnough(){
  if(wheatAmount >= 2 && cornAmount >= 1){
    enoughForFeed = true;
  } else {
    enoughForFeed = false;
  }
  if (wheatAmount >= 3){
    enoughForBread = true;
  } else {
    enoughForBread = false;
  }
  if (cornAmount >= 2 && eggAmount >= 2){
    enoughForCB = true;
  } else {
    enoughForCB = false;
  }
}

function plantCutPlots(){
  
    // console.log("Corn: " + cornAmount);
    // console.log("wheat: " + wheatAmount);
  
    //plant crops
    if (cornMouse){
      if (mouseIsOver(landPlot1) && plot1Empty){
        plot1Corn = true;
        plot1Empty =false;
      }
      if(mouseIsOver(landPlot2) && plot2Empty){
        plot2Corn = true;
        plot2Empty =false;
      }
      if(mouseIsOver(landPlot3) && plot3Empty){
        plot3Corn = true;
        plot3Empty =false;
      }
      if( mouseIsOver(landPlot4) && plot4Empty){
        plot4Corn = true;
        plot4Empty =false;
      }
      if( mouseIsOver(landPlot5) && plot5Empty){
        plot5Corn = true;
        plot5Empty =false;
      }
      if( mouseIsOver(landPlot6) && plot6Empty){
        plot6Corn = true;
        plot6Empty =false;
       
      }
    }
    if (wheatMouse){
      if (mouseIsOver(landPlot1) && plot1Empty){
        plot1Wheat = true;
        plot1Empty = false;
      }
      if(mouseIsOver(landPlot2) && plot2Empty){
        plot2Wheat = true;
        plot2Empty =false;
      }
      if(mouseIsOver(landPlot3) && plot3Empty){
        plot3Wheat = true;
        plot3Empty =false;
      }
      if( mouseIsOver(landPlot4) && plot4Empty){
        plot4Wheat = true;
        plot4Empty =false;
      }
      if( mouseIsOver(landPlot5) && plot5Empty){
        plot5Wheat = true;
        plot5Empty =false;
      }
      if( mouseIsOver(landPlot6) && plot6Empty){
        plot6Wheat = true;
        plot6Empty =false;
      }
    }
    if (scytheMouse){
      if ((mouseIsOver(landPlot1) && wP1S3.visible == 1)){
        plot1Wheat = false;
        plot1Empty = true;
        wP1S3.visible = 0;
        wheatAmount++;
        
      } else if ((mouseIsOver(landPlot1)  && cP1S3.visible == 1)){
        plot1Corn = false;
        plot1Empty = true;
        cP1S3.visible = 0;
        cornAmount++;
      }
      if((mouseIsOver(landPlot2)  && wP2S3.visible == 1)){
        plot2Wheat = false;
        plot2Empty = true;
        wP2S3.visible = 0;
        wheatAmount++;
      } else if (((mouseIsOver(landPlot2)  && cP2S3.visible == 1))){
        plot2Corn = false;
        plot2Empty = true;
        cP2S3.visible = 0;
        cornAmount++;
      }
      if((mouseIsOver(landPlot3)  && wP3S3.visible == 1)){
        plot3Wheat = false;
        plot3Empty = true;
        wP3S3.visible = 0;
        wheatAmount++;
      } else if (((mouseIsOver(landPlot3)  && cP3S3.visible == 1))){
        plot3Corn = false;
        plot3Empty = true;
        cP3S3.visible = 0;
        cornAmount++;
      }
      if((mouseIsOver(landPlot4)  && wP4S3.visible == 1)){
        plot4Wheat = false;
        plot4Empty = true;
        wP4S3.visible = 0;
        wheatAmount++;
      } else if (((mouseIsOver(landPlot4)  && cP4S3.visible == 1))){
        plot4Corn = false;
        plot4Empty = true;
        cP4S3.visible = 0;
        cornAmount++;
      }
      if((mouseIsOver(landPlot5)  && wP5S3.visible == 1)){
        plot5Wheat = false;
        plot5Empty = true;
        wP5S3.visible = 0;
        wheatAmount++;
      } else if (((mouseIsOver(landPlot5)  && cP5S3.visible == 1))){
        plot5Corn = false;
        plot5Empty = true;
        cP5S3.visible = 0;
        cornAmount++;
      }
      if((mouseIsOver(landPlot6)  && wP6S3.visible == 1)){
        plot6Wheat = false;
        plot6Empty = true;
        wP6S3.visible = 0;
        wheatAmount++;
      } else if (((mouseIsOver(landPlot6)  && cP6S3.visible == 1))){
        plot6Corn = false;
        plot6Empty = true;
        cP6S3.visible = 0;
        cornAmount++;
      }
    }
    
    
  
    
    
}

function growCrops(){
    
    
    // grow plant stages
    if (plot1Corn){
        
        cP1S1.visible = 1;
        // console.log(plot1Count);
      if (plot1Count >= cornTimeS2){
        cP1S1.visible = 0;
        cP1S2.visible = 1;
        // console.log("test true");
      } 
      
      if(plot1Count >= cornTimeS3){
        cP1S3.visible = 1;
        cP1S2.visible = 0;
        
      } 
    } else if(plot1Wheat){
      wP1S1.visible = 1;
        if(plot1Count >= wheatTimeS2){
          wP1S2.visible = 1;
          wP1S1.visible = 0;
        }
        if(plot1Count>= wheatTimeS3){
          wP1S3.visible = 1;
          wP1S2.visible = 0;
        }
    }
    
    //plot 2
    if (plot2Corn){
        
        cP2S1.visible = 1;
        // console.log(plot2Count);
      if (plot2Count >= cornTimeS2){
        cP2S2.visible = 1;
        cP2S1.visible = 0;
        // console.log("test true");
      } 
      
      if(plot2Count >= cornTimeS3){
        cP2S3.visible = 1;
        cP2S2.visible = 0;
        
      } 
    } else if(plot2Wheat){
      wP2S1.visible = 1;
        if(plot2Count >= wheatTimeS2){
          wP2S2.visible = 1;
          wP2S1.visible = 0;
        }
        if(plot2Count>= wheatTimeS3){
          wP2S3.visible = 1;
          wP2S2.visible = 0;
        }
    }
    
    //plot 3
    if (plot3Corn){
        
        cP3S1.visible = 1;
        // console.log(plot2Count);
      if (plot3Count >= cornTimeS2){
        cP3S2.visible = 1;
        cP3S1.visible = 0;
        // console.log("test true");
      } 
      
      if(plot3Count >= cornTimeS3){
        cP3S3.visible = 1;
        cP3S2.visible = 0;
        
      } 
    } else if(plot3Wheat){
      wP3S1.visible = 1;
        if(plot3Count >= wheatTimeS2){
          wP3S2.visible = 1;
          wP3S1.visible = 0;
        }
        if(plot3Count>= wheatTimeS3){
          wP3S3.visible = 1;
          wP3S2.visible = 0;
        }
    }
    //plot4
    if (plot4Corn){
        
        cP4S1.visible = 1;
        // console.log(plot2Count);
      if (plot4Count >= cornTimeS2){
        cP4S2.visible = 1;
        cP4S1.visible = 0;
        // console.log("test true");
      } 
      
      if(plot4Count >= cornTimeS3){
        cP4S3.visible = 1;
        cP4S2.visible = 0;
        
      } 
    } else if(plot4Wheat){
      wP4S1.visible = 1;
        if(plot4Count >= wheatTimeS2){
          wP4S2.visible = 1;
          wP4S1.visible = 0;
        }
        if(plot4Count>= wheatTimeS3){
          wP4S3.visible = 1;
          wP4S2.visible = 0;
        }
    }
    //plot 5
    if (plot5Corn){
        
        cP5S1.visible = 1;
        // console.log(plot2Count);
      if (plot5Count >= cornTimeS2){
        cP5S2.visible = 1;
        cP5S1.visible = 0;
        // console.log("test true");
      } 
      
      if(plot5Count >= cornTimeS3){
        cP5S3.visible = 1;
        cP5S2.visible = 0;
        
      } 
    } else if(plot5Wheat){
      wP5S1.visible = 1;
        if(plot5Count >= wheatTimeS2){
          wP5S2.visible = 1;
          wP5S1.visible = 0;
        }
        if(plot5Count>= wheatTimeS3){
          wP5S3.visible = 1;
          wP5S2.visible = 0;
        }
    }
    //plot 6 
    if (plot6Corn){
        
        cP6S1.visible = 1;
        // console.log(plot2Count);
      if (plot6Count >= cornTimeS2){
        cP6S2.visible = 1;
        cP6S1.visible = 0;
        // console.log("test true");
      } 
      
      if(plot6Count >= cornTimeS3){
        cP6S3.visible = 1;
        cP6S2.visible = 0;
        
      } 
    } else if(plot6Wheat){
      wP6S1.visible = 1;
        if(plot6Count >= wheatTimeS2){
          wP6S2.visible = 1;
          wP6S1.visible = 0;
        }
        if(plot6Count>= wheatTimeS3){
          wP6S3.visible = 1;
          wP6S2.visible = 0;
        }
    }
    
    
    
  }

function millTimer(){
  if (slot1FM){
    slot1FMTimer += 1;
  } else if (!slot1FM){
    slot1FMTimer = 0;
  }
  if (slot2FM) {
    slot2FMTimer += 1;
  } else if (!slot2FM){
    slot2FMTimer = 0;
  }
}

function bakeryTimer(){
  if (slot1B || slot1CB){
    slot1BakeryTimer += 1;
  } else if (!slot1B && !slot1CB){
    slot1BakeryTimer = 0;
  }
  if (slot2B || slot2CB){
    slot2BakeryTimer += 1;
  } else if (!slot2B || !slot2CB){
    slot2BakeryTimer = 0;
  }
}

function cropTimer(){
  if (!plot1Empty){
      plot1Count += 1;
    } else if (plot1Empty){
      plot1Count = 0;
    }
    
    if (!plot2Empty){
      plot2Count += 1;
    } else if (plot2Empty){
      plot2Count = 0;
    }
    
    if (!plot3Empty){
      plot3Count += 1;
    }else if (plot3Empty){
      plot3Count = 0;
    }
    
    if (!plot4Empty){
      plot4Count += 1;
    }else if (plot4Empty){
      plot4Count = 0;
    }
    
    if (!plot5Empty){
      plot5Count += 1;
    }
    else if (plot5Empty){
      plot5Count = 0;
    }
    
    if (!plot6Empty){
      plot6Count += 1;
    }else if (plot6Empty){
      plot6Count = 0;
    }
}

function mouseType(){
  if (cornMouse){
    cornSprite.x = World.mouseX;
    cornSprite.y = World.mouseY;
  } else if (wheatMouse){
    wheatSprite.x = World.mouseX;
    wheatSprite.y = World.mouseY;
  } else if (scytheMouse){
    scytheSprite.x = World.mouseX;
    scytheSprite.y = World.mouseY;
  } else if (breadMouse){
    breadSprite.x = World.mouseX;
    breadSprite.y = World.mouseY;
  } else if(cornBreadMouse){
    cornBreadSprite.x = World.mouseX;
    cornBreadSprite.y = World.mouseY;
  } else if (chickenFeedMouse){
    chickenFeed.x = World.mouseX;
    chickenFeed.y = World.mouseY;
  } else if(eggBasketMouse){
    eggBasketSprite.x = World.mouseX;
    eggBasketSprite.y = World.mouseY;
  } else if (cFCoopMouse){
    cFCoopSprite.x = World.mouseX;
    cFCoopSprite.y = World.mouseY;
  }
  if (mouseWentUp("leftButton")){
    cornMouse = false;
    wheatMouse = false;
    scytheMouse = false;
    breadMouse = false;
    cornBreadMouse = false;
    chickenFeedMouse = false;
    eggBasketMouse = false;
    cFCoopMouse = false;
    
    wheatSprite.x = m_wheatX;
    wheatSprite.y = m_wheatY;
    
    cornSprite.x = m_cornX;
    cornSprite.y = m_cornY;
    
    scytheSprite.x = m_scytheX;
    scytheSprite.y = m_scytheY;
    
    breadSprite.x = m_breadX;
    breadSprite.y = m_breadY;
    
    cornBreadSprite.x = m_cBX;
    cornBreadSprite.y = m_cBY;
    
    chickenFeed.x = m_chickenFeedX;
    chickenFeed.y = m_chickenFeedY;
    
    cFCoopSprite.x = m_cFCoopX;
    cFCoopSprite.y = m_cFCoopY;
    
    eggBasketSprite.x = m_eggBasketX;
    eggBasketSprite.y = m_eggBasketY;
  }
}

function bakeryInteraction(){
  
  if (mousePressedOver(bakery)){
    bakeryMenu.visible = 1;
    cornBreadSprite.visible = 1;
    breadSprite.visible = 1;
    bakery.setAnimation("bakery-removebg-preview.png_1_copy_1");
    showSlot1Bakery = true;
    showSlot2Bakery = true;
    
  } else if(mousePressedOver(breadSprite) && breadSprite.visible == 1){
    breadMouse = true;
  } else if (mousePressedOver(cornBreadSprite) && cornBreadSprite.visible == 1){
    cornBreadMouse = true;
  } else if (mousePressedOver(grass)){
    bakeryMenu.visible = 0;
    cornBreadSprite.visible = 0;
    breadSprite.visible = 0;
    bakery.setAnimation("bakery-removebg-preview.png_1");
    showSlot1Bakery = false;
    showSlot2Bakery = false;
    
  }
  
  if (breadMouse && mouseWentUp("leftButton") && mouseIsOver(bakery) && enoughForBread){
      wheatAmount -= 3;
    if ((slot1B || slot1CB) && !slot2B){
      slot2B = true;
      
    } else if((!slot1B && !slot1CB)){
      slot1B = true;
      // console.log("this runs");
    }
    
  }
  if (cornBreadMouse && mouseWentUp("leftButton") && mouseIsOver(bakery) && enoughForCB){
      cornAmount -= 2;
      eggAmount -= 2;
    if ((slot1B || slot1CB) && !slot2B){
      slot2CB = true;
      
    }
    if((!slot1B&&!slot1CB)){
      slot1CB = true;
      // console.log("this runs");
    } 
    
  }
  
  if(showSlot1Bakery){
    if(slot1B){
    bakery1B.visible = 1;
  } else if(slot1CB){
    bakery1CB.visible = 1;
    }
  } else {
     bakery1B.visible = 0;
     bakery1CB.visible = 0;
  }
  
  if(showSlot2Bakery){
    if(slot2B){
      bakery2B.visible = 1;
    } else if(slot2CB){
      bakery2CB.visible = 1;
    }
  } else {
     bakery2B.visible = 0;
     bakery2CB.visible = 0;
  }
  
  //look here //
  
  if(slot1B){
    if (slot1BakeryTimer > breadTime){
      bakery1B.visible = 1;
      if (mousePressedOver(bakery)){
        slot1BakeryTimer = 0;
        slot1B = false;
        slot1CB = false;
        cornBreadSprite.visible = 0;
        breadSprite.visible = 0;
        bakery1B.visible = 0;
        showSlot1Bakery = false;
        
        
        breadAmount++;
      }
    }
  }
  if(slot1CB){
    if (slot1BakeryTimer > cornBreadTime){
      bakery1CB.visible = 1;
    // console.log("seeing is believing");
      if(mousePressedOver(bakery)){
       slot1BakeryTimer = 0;
       slot1CB = false;
       cornBreadSprite.visible = 0;
       breadSprite.visible = 0;
       bakery1CB.visible = 0;
       showSlot1Bakery = false;
    
    
       cornBreadAmount++;
     }
    }
    
  
  }
  if(slot2B){
    if (slot2BakeryTimer > breadTime){
      bakery2B.visible = 1;
      if (mousePressedOver(bakery)){
        slot2BakeryTimer = 0;
        slot2B = false;
        slot2CB = false;
        cornBreadSprite.visible = 0;
        breadSprite.visible = 0;
        bakery2B.visible = 0;
      
    showSlot2Bakery = false;
        
        breadAmount++;
      }
    }
  }
  if(slot2CB){
    if (slot2BakeryTimer > cornBreadTime){
      bakery2CB.visible = 1;
    // console.log("seeing is believing");
      if(mousePressedOver(bakery)){
       slot2BakeryTimer = 0;
       slot2CB = false;
       cornBreadSprite.visible = 0;
        breadSprite.visible = 0;
        bakery2CB.visible = 0;
       
       showSlot2Bakery = false;
       cornBreadAmount++;
     }
    }
  }
}

function millInteraction(){
  
  if (mousePressedOver(feedMill)){
    feedMenu.visible = 1;
    chickenFeed.visible = 1;
    showSlot1FM = true;
    showSlot2FM = true;
    
    if (!feedMillWorking){
    feedMill.setAnimation("feedMillOpenSlot-removebg-preview.png_1_copy_1");
    } else if(feedMillWorking){
      feedMill.setAnimation("feedMillMakingOpenSlot-removebg-preview.png_1_copy_1_copy_1");
    }
      
  } else if (mousePressedOver(chickenFeed) && chickenFeed.visible == 1){
    chickenFeedMouse = true;
    
  } else if(mousePressedOver(grass)){
          
    
    feedMenu.visible = 0;
    chickenFeed.visible = 0;
    showSlot1FM = false;
    showSlot2FM = false;
    
      if(feedMillWorking){
      feedMill.setAnimation("feedMillMaking-removebg-preview.png_1_copy_1");
    } else if (!feedMillWorking){
      feedMill.setAnimation("feedMillEmpty-removebg-preview.png_1");
    }
  
    
  }
  
  //add chicken feed to queue

  if (chickenFeedMouse && mouseWentUp("leftButton") && mouseIsOver(feedMill) && enoughForFeed){
    
    feedMill.setAnimation("feedMillMakingOpenSlot-removebg-preview.png_1_copy_1_copy_1");
    feedMillWorking = true;
    wheatAmount -= 2;
    cornAmount -= 1;
    
    if(!slot1FM && !slot2FM){
      slot1FM = true;
    } else if (slot1FM && !slot2FM){
      slot2FM = true;
      }
    }
  
    
  if(showSlot1FM && slot1FM){
    feed1FM.visible = 1;
  } else {
    feed1FM.visible = 0;
  }
  if(showSlot2FM && slot2FM){
    feed2FM.visible = 1;
  } else {
    feed2FM.visible = 0;
  }
  
  
  if (slot2FMTimer > feedTime){
    feed2FM.visible = 1;
    if (mousePressedOver(feedMill)){
      slot2FMTimer = 0;
      slot2FM = false;
      chickenFeedAmount++;
      feedMillWorking = false;
      if(slot1FM){
        feedMillWorking = true;
      }
    }
  }
  if (slot1FMTimer > feedTime){
     feed1FM.visible = 1;
    // console.log("seeing is believing");
     if(mousePressedOver(feedMill)){
       slot1FMTimer = 0;
       slot1FM = false;
       chickenFeedAmount++;
       feedMillWorking = false;
       if(slot2FM){
        feedMillWorking = true;
      }
     }
  }
  
  
  
  }

function chickenCoopInteraction(){
  if (mousePressedOver(chickenCoop)){
    chickenCoopMenu.visible = 1;
    eggBasketSprite.visible = 1;
    cFCoopSprite.visible = 1;
  } else if (mousePressedOver(eggBasketSprite) && eggBasketSprite.visible == 1){
    eggBasketMouse = true;
  } else if(mousePressedOver(cFCoopSprite) && cFCoopSprite.visible == 1){
    cFCoopMouse = true;
  } else if (mousePressedOver(grass)){
    
    chickenCoopMenu.visible = 0;
    eggBasketSprite.visible = 0;
    cFCoopSprite.visible = 0;
  }
  //feed chickens for eggs
  if (cFCoopMouse){
    if(mouseIsOver(chicken1) && chickenFeedAmount > 0 && chicken1Ready == false){
      chicken1.setAnimation("chickenReady");
      chicken1Ready = true;
      chickenFeedAmount--;
    }
    if(mouseIsOver(chicken2) && chickenFeedAmount > 0 && chicken2Ready == false){
      chicken2.setAnimation("chickenReady");
      chicken2Ready = true;
      chickenFeedAmount--;
    }
    if(mouseIsOver(chicken3) && chickenFeedAmount > 0 && chicken3Ready == false){
      chicken3.setAnimation("chickenReady");
      chicken3Ready = true;
      chickenFeedAmount--;
    }
  }
  //collect eggs
  if(eggBasketMouse){
    if(mouseIsOver(chicken1) && chicken1Ready == true){
      chicken1.setAnimation("chickenStanding");
      chicken1Ready = false;
      eggAmount++;
    }
    if(mouseIsOver(chicken2) && chicken2Ready == true){
      chicken2.setAnimation("chickenStanding");
      chicken2Ready = false;
      eggAmount++;
    }
    if(mouseIsOver(chicken3) && (chicken3Ready == true)){
      chicken3.setAnimation("chickenStandingflipped");
      chicken3Ready = false;
      eggAmount++;
    }
  }

}
  


