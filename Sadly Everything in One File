initializeGame();

function draw() {
  // draw background
  gameStateChanger();
  
  // update sprites
  
  
  if (gameState == "farm" || gameState == "inventory" || gameState == "instructionScreen" || gameState == "recipeBook"){
     cropTimer();
     bakeryTimer();
     millTimer();
     
  }
  if(gameState == "farm"){
  
  checkEnough();
  
  farmPlotInteraction();
  
  bakeryInteraction();
  
  millInteraction();
  
  chickenCoopInteraction();
  
  mouseType();
  
  plantCutPlots();
  
  growCrops();
  
  //shift all sprites on screen move
  moveScreen();
  
  checkWin();
  }
  
  
  
  
  drawSprites();
  
  
  //Writing text on the screen
  if(gameState == "farm"){
    gameMin = World.seconds/60;
    gameSec = World.seconds%60;
    if (gameSec < 10){
    filler0 = "0";
    } else {
      filler0 = "";
    }
    fill("black");
    textSize(18);
    text("Time: " + parseInt(gameMin) + ":" + filler0 + gameSec ,145,25);
  }
  
  if(gameState == "inventory"){
    fill("white");
    stroke("black");
    strokeWeight(4);
    textSize(20);
    text(wheatAmount, iWheat.x+5,iWheat.y + 20);
    text(cornAmount, iCorn.x+5, iCorn.y + 20);
    text(eggAmount, iEgg.x+5, iEgg.y + 20);
    text(breadAmount, iBread.x+5, iBread.y + 20);
    text(cornBreadAmount, iCB.x+5, iCB.y + 20);
    text(chickenFeedAmount, iCF.x+5, iCF.y + 20);
    
  }
  
  if(gameState == "startScreen"){
    fill("white");
    textSize(15);
    text("Press \"i\" to see instructions at any point." +
    "\nPress space to start the game and to go back to the farm.", 10,350);
    fill("black");
    stroke("black");
    strokeWeight(1);
    text("You must make 5 Corn Bread and 2 Bread \nto deliver to the school. Try and make it \nbefore lunch...", 75, 85);
  }
  
  if(gameState == "instructionScreen"){
    fill("white");
    stroke("black");
    strokeWeight(4);
    textSize(19);
    text("The Silo will display your inventory of goods. "+
    "\n\nThe Barn will show recipes to make items." +
    "\n\nClick on each building to see what they \ncan make and drag items over them" + 
    "\nto start making them. "+
    "Buildings will display\ngoods when they are ready."+
    " \nClicking on them will gather the resources." +
    "\n\nThe Farm plots are on the right and the\nChickencoop"+
    " is on the left\n\nUse the arrowkeys to move around the map"+
    "\n\nPress \"Space\" to return to the farm", 15,40);
  }
  
  if (gameState == "win"){
    fill("white");
    textSize(25);
    stroke("black");
    strokeWeight(4);
    
    winTimeMin = winTime / 60;
    
    winTimeSec = winTime % 60;
    text("You delivered in " + parseInt(winTimeMin) +" minutes and\n" + winTimeSec + " seconds.", 25, 250);
    if (winTime < 390){
      text("Congrats on the gold medal!", 25, 310);
      medal.setAnimation("medalGold");
    } else if (winTime > 540){
      text("Try to beat 9 minutes next \ntime and get a silver medal!", 25, 310);
      medal.setAnimation("medalBronze");
    }  else {
      text("Great Job!\nFinish in 6 and a half minutes or less\nfor a gold medal.", 25, 310);
    }
    text("Press \'r\' to keep playing", 25, 380);
  }
  
  if (gameState == "recipeBook"){
      if(page1){
        textSize(40);
        fill("black");
        textFont("Brush Script MT, Brush Script Std");
        text("2x Wheat\n1x Corn", 30, 220);
        text("2x Corn \n2x Eggs", 220, 220);
      }
      if(page3){
        textSize(40);
        fill("black");
        textFont("Brush Script MT, Brush Script Std");
        text("3x Wheat", 40, 220);
      }
  }
}

// Create your functions here
function moveScreen(){
  if (keyDown("left") && screenX > leftBound){
      shiftX = -6;
    } else if(keyDown("right") && screenX < rightBound){
     shiftX = 6;
   } else {
     shiftX = 0;
   }
   
  if (keyDown("up") && screenY > topBound){
     shiftY = -6;
    } else if (keyDown("down") && screenY < bottomBound){
      shiftY = 6;
    } else {
      shiftY = 0;
  }
   screenX += shiftX;
   screenY += shiftY;
  

  
  chicken1.x -= shiftX;
  chicken1.y -= shiftY;
  
  chicken2.x -= shiftX;
  chicken2.y -= shiftY;
  
  chicken3.x -= shiftX;
  chicken3.y -= shiftY;
  
  bakery.x -= shiftX;
  bakery.y -= shiftY;
  
  silo.x -= shiftX;
  silo.y -= shiftY;
  
  barn.x -= shiftX;
  barn.y -= shiftY;
  
  landPlot1.x -= shiftX;
  landPlot1.y -= shiftY;
  
  landPlot2.x -= shiftX;
  landPlot2.y -= shiftY;
  
  landPlot3.x -= shiftX;
  landPlot3.y -= shiftY;
  
  landPlot4.x -= shiftX;
  landPlot4.y -= shiftY;
  
  landPlot5.x -= shiftX;
  landPlot5.y -= shiftY;
  
  landPlot6.x -= shiftX;
  landPlot6.y -= shiftY;
  
  chickenCoop.x -= shiftX;
  chickenCoop.y -= shiftY;
  
  grass.x -= shiftX;
  grass.y -= shiftY;
  
  plantMenu.x -= shiftX;
  plantMenu.y -= shiftY;
  
  cornSprite.x -= shiftX;
  cornSprite.y -= shiftY;
  
